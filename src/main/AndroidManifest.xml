            android:name="health.castle.modules.cart.CartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="health.castle.modules.home.HomeActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="health.castle.modules.user.UserActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="health.castle.AppController"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".reminder.AlarmActivity"
            android:excludeFromRecents="true"
            android:showOnLockScreen="true"
            android:showWhenLocked="true"
            android:turnScreenOn="true" />
        <activity
            android:name=".reminder.ReminderHomeActivity"
            android:exported="false" />

        <receiver android:name=".reminder.ui.home.AlarmReceiver" />
    </application>

